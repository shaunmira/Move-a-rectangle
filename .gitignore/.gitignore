def going_right(event):
    global x 
    global y
    if x == 1:
        if y == 0:
            x = 0
        else:
            x = 1
            y = 0
    else:
        x = 1
        
def going_left(event):
    global x 
    global y
    if x == -1:
        if y == 0:
            x = 0
        else:
            x = -1
            y = 0
    else:
        x = -1
        
def going_up(event):
    global x 
    global y
    if y == -1:
        if x == 0:
            y = 0
        else:
            x = 0
            y = -1
    else:
        y = -1
        
def going_down(event):
    global x 
    global y
    if y == 1:
        if x == 0:
            y = 0
        else:
            x = 0
            y = 1
    else:
        y = 1
